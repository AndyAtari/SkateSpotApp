<h1>Comments Page</h1>

<ul>
<% @comments.each do |comment| %>
  <h1><%= comment.skatespot.name%></h1>
  <%= "Content:" %>
  <%= comment.content%><br>
  <h3><%= "Is the spot busted??"%><%= comment.busted%></h3><br>
  <%= "Spot Status:" %>
  <%= comment.status %><br>
  <%= link_to "Edit This Comment", edit_comment_path(comment) %>
  <% end %>
</ul>
<%= link_to "Logout", logout_path, method: 'delete' %>